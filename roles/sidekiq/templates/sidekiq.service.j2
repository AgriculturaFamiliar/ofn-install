# {{ ansible_managed }}

[Unit]
Description=sidekiq
After=syslog.target network.target

[Service]
Type=notify
WatchdogSec=10

WorkingDirectory={{ current_path }}
User={{ unicorn_user }}

ExecStart=/bin/bash -lc 'exec {{ unicorn_home_path }}/.rbenv/shims/bundle exec sidekiq -e {{ rails_env }}'

RestartSec=10
Restart=on-failure

StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=sidekiq

[Install]
WantedBy=multi-user.target
